{
  "name": "Litecom2MQTT",
  "version": "0.1.6",
  "slug": "litecom2mqtt",
  "description": "Bridge Zumtobel Litecom CCD to MQTT with Home Assistant discovery.",
  "arch": ["amd64", "armv7", "armhf", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "options": {
    "litecom_ip": "192.168.1.254",
    "litecom_port": 6000,
    "mqtt_broker": "mqtt://core-mosquitto",
    "mqtt_user": "mqtt_user",
    "mqtt_password": "mqtt_password",
    "discovery_prefix": "homeassistant"
  },
  "schema": {
    "litecom_ip": "str",
    "litecom_port": "int",
    "mqtt_broker": "str",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "discovery_prefix": "str"
  },
  "map": ["config"],
  "host_network": true,
  "webui": "http://[HOST]:[PORT]",
  "image": "ghcr.io/swissmanu/litecom2mqtt:latest"
}
